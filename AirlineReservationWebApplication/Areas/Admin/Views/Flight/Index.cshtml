@model IEnumerable<FlightViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="row pt-2">
    <div class="col-6 ">
        <h2>Flight List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Flight" asp-action="CreateFlight" class="btn btn-primary"><i class="bi bi-plus-circle"></i>&nbsp Create new Flight</a>
    </div>
</div>
<table class="table table-bordered table-striped mt-3" width="100%">
    <thead>
        <tr>
            <th>Flight Name</th>
            <th>Departure Date</th>
            <th>Departure Time</th>
            <th>Departure Place</th>
            <th>Arrivale Place</th>
            <th>Total Seats</th>
            <th>Booked Seats</th>
            <th>Flight Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td class="w-25">@obj.Flight_Name</td>
                <td class="w-50">@obj.Departure_Date</td>
                <td class="w-50">@obj.Departure_Time</td>
                <td class="w-50">@obj.Departure_Place</td>
                <td class="w-50">@obj.Arrival_Place</td>
                <td class="w-50">@obj.Total_Seats</td>
                <td class="w-50">@obj.Booked_Seats</td>
                <td class="w-50">@obj.Flight_Type</td>
                <td>
                    <a asp-controller="Flight" asp-action="UpdateFlight" asp-route-id="@obj.Flight_Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i>&nbsp Edit</a>
                    <a asp-controller="Flight" asp-action="DeleteFlight" asp-route-id="@obj.Flight_Id" class="btn btn-danger"><i class="bi bi-trash"></i>&nbsp Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

