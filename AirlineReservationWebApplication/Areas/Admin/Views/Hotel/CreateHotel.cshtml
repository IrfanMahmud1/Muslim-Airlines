@model HotelViewModel
@{
    ViewData["Title"] = "CreateHotel";
}

<form method="post">
    <div class="border mt-3 p-3">
        <div class="row">
            <h2>Create Hotel</h2>
            <hr />
        </div>
        <div>
            <label asp-for="Hotel_Name" class="text-secondary" style="font-size:20px"></label>
            <input asp-for="Hotel_Name" class="form-control mt-1" />
            <span asp-validation-for="Hotel_Name" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Hotel_Location" class="text-secondary" style="font-size:20px"></label>
            <input asp-for="Hotel_Location" class="form-control mt-1" />
            <span asp-validation-for="Hotel_Location" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Room_Category" class="text-secondary" style="font-size:20px"></label>
            <div>
                @Html.RadioButtonFor(x => x.Room_Category, "Single", new { @id = "single" })
                <label for="single">Single bed</label>
            </div>
            <div>
                @Html.RadioButtonFor(x => x.Room_Category, "Double", new { @id = "double" })
                <label for="double">Double bed</label>
            </div>
            <div>
                @Html.RadioButtonFor(x => x.Room_Category, "Three", new { @id = "three" })
                <label for="three">Three bed</label>
            </div><div>
                @Html.RadioButtonFor(x => x.Room_Category, "Four", new { @id = "single" })
                <label for="four">Four bed</label>
            </div>
            <span asp-validation-for="Room_Category" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Total_Rooms" class="text-secondary" style="font-size:20px"></label>
            <input asp-for="Total_Rooms" class="form-control mt-1" />
            <span asp-validation-for="Total_Rooms" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Checkin_Date" class="text-secondary" style="font-size:20px"></label>
            <input asp-for="Checkin_Date" class="form-control mt-1" />
            <span asp-validation-for="Checkin_Date" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Checkin_Time" class="text-secondary" style="font-size:20px"></label>
            <input asp-for="Checkin_Time" class="form-control mt-1" />
            <span asp-validation-for="Checkin_Time" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Checkout_Date" class="text-secondary" style="font-size:20px"></label>
            <input asp-for="Checkout_Date" class="form-control mt-1" />
            <span asp-validation-for="Checkout_Date" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Checkout_Time" class="text-secondary" style="font-size:20px"></label>
            <input asp-for="Checkout_Time" class="form-control mt-1" />
            <span asp-validation-for="Checkout_Time" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Country" class="text-secondary" style="font-size:20px"></label>
            <input asp-for="Country" class="form-control mt-1" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary" style="width:120px">Create</button>
            <a asp-controller="Hotel" asp-action="Index" class="btn btn-secondary ms-1">Back to List</a>
        </div>
    </div>
</form>


@section scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
