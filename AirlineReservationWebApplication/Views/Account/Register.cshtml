@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<partial name="_Notifications" />
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Sign Up</h2>
            <hr />
        </div>
        <div class="mb-4 form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control mt-1" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-4 form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control mt-1" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control mt-1" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-4">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control mt-1" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:100%">Sign Up</button>
        <br /><br />
        <div class="row text-center">
            <a asp-controller="Account" asp-action="Login" class="link-primary inline-block" style="text-decoration:none">Already have an account?</a>
        </div>
    </div>
    
</form>

@section scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}