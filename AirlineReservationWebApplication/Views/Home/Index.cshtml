@model EditUserFlightSearchAndFlightViewModel
@{
    ViewData["Title"] = "Home";

    TempData["button"] = "Search Flights";
    TempData["action"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <div class="container">
    <h1 class="mt-5 text-center" style="font-size:80px">
            <b>
                It's more than
                <br />
                just a trip
            </b>
    </h1>
        <partial name="_FlightSearchForm" />
</div>

<div class="container mt-5">
    <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="">
                <img src="~/images/explore.webp" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item" data-bs-interval="">
                <img src="~/images/explore.webp" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item" data-bs-interval="">
                <img src="~/images/explore.webp" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
