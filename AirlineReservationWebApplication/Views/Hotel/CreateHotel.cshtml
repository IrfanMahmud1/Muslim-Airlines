@model PassengerViewModel
@{
    ViewData["Title"] = "CreatePassenger";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}

<form method="post">
    <div class="border mt-3 p-3">
        <div class="row">
            <h2>Create Passenger</h2>
            <hr />
        </div>
        <div>
            <label asp-for="First_Name" class="text-secondary" style="font-size:20px"></label>
            <input asp-for="First_Name" class="form-control mt-1" />
            <span asp-validation-for="First_Name" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Last_Name" class="text-secondary" style="font-size:20px"></label>
            <input asp-for="Last_Name" class="form-control mt-1" />
            <span asp-validation-for="Last_Name" class="text-danger"></span>
        </div>
        <div class="mt-3">
            @* <label asp-for="Gender" class="text-secondary" style="font-size:20px"></label> *@
            <label for="gender" class="text-secondary" style="font-size:20px">Gender:</label>
            <div>
                @Html.RadioButtonFor(m => m.Gender, "Male", new { @id = "genderMale" })
                <label for="genderMale">Male</label>
            </div>
            <div>
                @Html.RadioButtonFor(m => m.Gender, "Female", new { @id = "genderFemale" })
                <label for="genderFemale">Female</label>
            </div>
        </div>
        <div class="mt-3">
            <label asp-for="Passport" class="text-secondary" style="font-size:20px"></label>
            <input asp-for="Passport" class="form-control mt-1" />
            <span asp-validation-for="Passport" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Mobile" class="text-secondary" style="font-size:20px"></label>
            <input asp-for="Mobile" class="form-control mt-1" />
            <span asp-validation-for="Mobile" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Nid" class="text-secondary" style="font-size:20px"></label>
            <input asp-for="Nid" class="form-control mt-1" />
            <span asp-validation-for="Nid" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Email" class="text-secondary" style="font-size:20px"></label>
            <input asp-for="Email" class="form-control mt-1" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Address" class="text-secondary" style="font-size:20px"></label>
            <input asp-for="Address" class="form-control mt-1" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="User_Id" class="text-secondary" style="font-size:20px"></label>
            @* <input asp-for="User_Id" class="form-control mt-1" /> *@
            <span asp-validation-for="User_Id" class="text-danger"></span>
            <select id="User_Id" name="User_Id">
                <option value="">-- Select Product --</option>
                @foreach (var item in Model.AllUsers)
                {
                    <option value="@item.Item2">@item.Item1</option>
                }
            </select>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary" style="width:120px">Create</button>
            <a asp-controller="Passenger" asp-action="Index" class="btn btn-secondary ms-1">Back to List</a>
        </div>
    </div>
</form>


@section scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
