@model UserViewModel
@{
    ViewData["Title"] = "DeleteUser";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}

<form method="post" asp-action="DeleteUser" asp-route-id="@Model.User_Id">
    <div class="border mt-3 p-3">
        <div class="row">
            <h2>Delete User</h2>
            <hr />
        </div>
        <div>
            <label asp-for="User_Name" class="text-secondary" style="font-size:20px"></label>
            <input asp-for="User_Name" class="form-control mt-1" disabled />
            <span asp-validation-for="User_Name" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="User_Email" class="text-secondary" style="font-size:20px"></label>
            <input asp-for="User_Email" class="form-control mt-1" disabled />
            <span asp-validation-for="User_Email" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary" style="width:120px">Delete</button>
            <a asp-controller="User" asp-action="Index" class="btn btn-secondary ms-1">Back to List</a>
        </div>
    </div>
</form>

@section scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

