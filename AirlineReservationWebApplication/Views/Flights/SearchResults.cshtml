@model EditUserFlightSearchAndFlightViewModel
@{
    ViewData["Title"] = "Search";
    TempData["button"] = "Modify Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


 <div class="container">
    <div>
        <partial name="_FlightSearchForm" />
    </div>
    <div class="mt-5 w-75 mx-auto ">
        <div class="d-flex justify-content-between" w-100">
            <a href="#"><i class="bi bi-caret-left-fill fs-1 text-danger"></i></a>
            <h2 class="text-center" >Flights from @Model.userFlightSearchModel.Origin to @Model.userFlightSearchModel.Destination</h2>
            <a href="#"><i class="bi bi-caret-right-fill fs-1 text-danger"></i></a>
        </div>
        <div class="mt-5">
            @foreach(var flights in Model.flightViewModel)
            {
                <div class="row shadow-sm rounded-2 ps-5 mt-5">
                    <div class="col-2">
                    </div>
                    <div class="col-2">
                        <h6 class="text-secondary mb-3 fw-light">Depart</h6>
                        <p class="fw-bold m-0 p-0">@flights.Departure_Time</p>
                        <p class="m-0 p-0">@flights.Departure_Date</p>
                        <p class="mt-3">@flights.Departure_Place</p>
                    </div>
                    <div class="col-2">
                        <div class="d-flex mt-5">
                            <i class="bi bi-arrow-right text-danger"></i>
                        </div>
                    </div>
                    <div class="col-2">
                        <h6 class="text-secondary mb-3 fw-light">Arrive</h6>
                        <p class="fw-bold m-0 p-0">@flights.Arrival_Time</p>
                        <p class="m-0 p-0">@flights.Arrival_Date</p>
                        <p class="mt-3">@flights.Arrival_Place</p>
                    </div>
                    <div class="col-2">
                        <h6 class="text-secondary mb-3 fw-light">Price</h6>
                    </div>
                    <div class="col-2 p-0">
                        <a asp-controller="Flights" asp-action="Review" asp-route-id="@flights.Flight_Id" class="btn btn-danger">Book Now</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

