@using AirlineReservationWebApplication.Areas.Admin.Models
@model PassengerViewModel

<div class="container">
    <h2 class="" style="color:red">Enter Traveler details</h2>
    <div class="border-2 border-black">
        <form method="post" asp-area="" asp-action="Review" asp-controller="Flights">
            <div class="row shadow-sm rounded-2 px-3 py-4">
                <input asp-for="Gender" value="Male" hidden />
                <div class="row">
                    <h2>Traveler 1</h2>
                    <hr />
                </div>
                <div class="mt-2">
                    <label asp-for="Title">Select Title <span style="color:red">*</span></label>
                    <select class="form-control" id="Title" name="Title" required>
                        <option value="Mr">Mr.</option>
                        <option value="Mrs">Mrs.</option>
                        <option value="Ms">Ms.</option>
                    </select>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="row justify-content-between mt-3">
                    <div class="col-6">
                        <label asp-for="First_Name">First Name<span style="color:red">*</span></label>
                        <input asp-for="First_Name" class="form-control" placeholder="First Name">
                        <span asp-validation-for="First_Name" class="text-danger"></span>
                    </div>

                    <div class="col-6">
                        <label asp-for="Last_Name">Last Name <span style="color:red">*</span></label>
                        <input asp-for="Last_Name" class="form-control" placeholder="Last Name">
                        <span asp-validation-for="Last_Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="row justify-content-between mt-3">
                    <div class="col-6">
                        <label asp-for="Date_of_Birth">Date of Birth <span style="color:red">*</span></label>
                        <input asp-for="Date_of_Birth" class="form-control">
                        <span asp-validation-for="Date_of_Birth" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="Passport">Passport Number <span style="color:red">*</span></label>
                        <input asp-for ="Passport" class="form-control" placeholder="Passport Number">
                        <span asp-validation-for="Passport" class="text-danger"></span>
                    </div>

                </div>
                <div class="row justify-content-between mt-3">
                    <div class="col-6">
                        <label asp-for="PassportExpiryDate">Passport Expiry Date (Optional)</label>
                        <input asp-for="PassportExpiryDate" class="form-control">
                        <span asp-validation-for="PassportExpiryDate" class="text-danger"></span>
                    </div>

                    <div class="col-6">
                        <label asp-for="Country">Country <span style="color:red">*</span></label>
                        <select class="form-control" asp-for="Country">
                            <option value="Bangladesh">Bangladesh</option>
                        </select>
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                </div>
                <div class="row justify-content-between mt-3">
                    <div class="col-6">
                        <label asp-for="Email">Email <span style="color:red">*</span></label>
                        <input asp-for="Email" class="form-control">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-6">
                        <label asp-for="Address">Address <span style="color:red">*</span></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="row justify-content-between mt-3">
                    <div class="col-6">
                        <label asp-for="Mobile">Contact No. <span style="color:red">*</span></label>
                        <input asp-for="Mobile" class="form-control" id="passportExpiryDate">
                        <span asp-validation-for="Mobile" class="text-danger"></span>
                    </div>

                    <div class="col-6">
                        <label asp-for="Nid">Nid <span style="color:red">*</span></label>
                        <input asp-for="Nid" class="form-control" />
                        <span asp-validation-for="Nid" class="text-danger"></span>
                    </div>
                </div>
                <div class="row justify-content-between mt-3">
                    <div class="col-6">
                        <label asp-for="User_Id">User Name <span style="color:red">*</span></label>
                        <select class="form-control" id="User_Id" name="User_Id">
                            <option value="">  Select User  </option>
                            @foreach (var user in Model.AllUsers)

                            {
                                <option value="@user.Item2">@user.Item1</option>
                            }
                        </select>
                        <span asp-validation-for="User_Id" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary" style="width:120px">Continue</button>
            </div>
        </form>
    </div>
</div>

@section scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}